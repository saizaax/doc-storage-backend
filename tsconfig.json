{
    "compilerOptions": {
      "target": "es2016",
      "module": "commonjs",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "strict": true,
      "skipLibCheck": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"],
        "@controllers/*": ["src/controllers/*"],
        "@services/*": ["src/services/*"],
        "@routes/*": ["src/routes/*"],
        "@middlewares/*": ["src/middlewares/*"],
        "@models/*": ["src/models/*"],
        "@utils/*": ["src/utils/*"],
        "@app-types/*": ["src/types/*"]
      }
    },
    "ts-node": {
      "require": ["tsconfig-paths/register"]
    }
  }
